{
    "name": "rtek/aws-gen",
    "description": "Generate PHP classes for AWS data types",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "aws/aws-sdk-php": "^3.0",
        "symfony/console": "^4.0",
        "zendframework/zend-code": "^3.3",
        "symfony/finder": "^4.0",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0|^8.0",
        "squizlabs/php_codesniffer": "^3.4",
        "slevomat/coding-standard": "^5.0"
    },

    "autoload": {
        "psr-4": {
            "Rtek\\AwsGen\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rtek\\AwsGen\\Tests\\": "tests"
        }
    },
    "bin": ["bin/aws-gen"],

    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    }
}
