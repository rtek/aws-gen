<?xml version="1.0"?>
<ruleset>

    <arg name="report-width" value="100"/>
    <arg value="p"/>
    <arg name="colors"/>

    <file>src</file>
    <file>tests</file>
    <exclude-pattern>/tests/_files/*</exclude-pattern>

    <rule ref="PSR12"/>

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="150"/>
        </properties>
    </rule>

    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

</ruleset>
